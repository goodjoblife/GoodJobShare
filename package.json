{
  "name": "GoodJobShare",
  "version": "0.1.0",
  "main": "lib/index.js",
  "scripts": {
    "start:tsc": "tsc -b -w --preserveWatchOutput",
    "start": "npm run start:tsc & razzle start",
    "start-production": "NODE_ENV=production node build/server.js",
    "lint": "eslint src/**/*.js src/**/*.ts src/**/*.tsx razzle.config.js",
    "lint-staged": "lint-staged",
    "stylelint": "stylelint \"src/**/*.css\"",
    "testonly": "razzle test --env=jsdom",
    "test": "npm run lint && npm run stylelint && npm run testonly",
    "build": "tsc -b && razzle build",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.ts": [
      "eslint --fix"
    ],
    "*.tsx": [
      "eslint --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ]
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "^common(.*)": "<rootDir>/src/components/common$1",
      "^images(.*)": "<rootDir>/src/components/images$1"
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@types/prop-types": "^15.7.15",
    "@types/qs": "^6.14.0",
    "@types/ramda": "^0.30.2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^16.9.25",
    "@types/react-helmet": "^6.1.11",
    "@types/react-redux": "^7.1.34",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "autoprefixer": "7.1.1",
    "babel-eslint": "^10.1.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-react-app": "^5.2.0",
    "eslint-import-resolver-webpack": "^0.13.8",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-flowtype": "^4.6.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "postcss-mixins": "^6.2.0",
    "postcss-nested": "^3.0.0",
    "postcss-simple-vars": "^4.1.0",
    "prettier": "^1.14.2",
    "redux-logger": "^2.7.4",
    "stylelint": "^9.10.1",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-prettier": "^1.0.6",
    "typescript": "5.1.6"
  },
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.3",
    "@fortawesome/fontawesome-free-solid": "^5.0.6",
    "@fortawesome/react-fontawesome": "^0.0.17",
    "@loadable/component": "^5.16.4",
    "airbnb-prop-types": "^2.15.0",
    "classnames": "^2.5.1",
    "date-fns": "^2.30.0",
    "express": "^4.20.0",
    "history": "^4.7.2",
    "isomorphic-fetch": "^2.2.1",
